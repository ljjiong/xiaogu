! function() {
	var e = {
		animateFinish: !0,
		init: function() {
			this.handleNavbarHover(), this.handleDropdown(), this.handleTopPillsHover(), this.handleColumnItemClick()
		},
		handleNavbarHover: function() {
			$("#site-header").hover(function() {
				$(this).removeClass("collapsed")
			}, function() {
				$(this).addClass("collapsed")
			})
		},
		handleDropdown: function() {
			var e = this,
				n = ($("#site-header"), $("#siteHeaderNavbar .navbar-category")),
				t = n.find(".category-item");
			t.hover(function() {
				var t = $(this),
					a = t.find(".gco-dropdown-menu.full-screen");
				if(a.length <= 0) return n.find(".opened").removeClass("opened"), void n.find(".gco-dropdown-menu.full-screen").css("height", "");
				if(!t.hasClass("opened")) {
					var i = t.find(".dropdown-container").height(),
						r = n.find(".opened");
					r.length > 0 ? (n.find(".gco-dropdown-menu.full-screen").css("height", ""), n.find(".opened").removeClass("opened"), a.css("height", i)) : (a.stop().css("height", 0), e.animateFinish = !1, a.animate({
						height: i
					}, 300, function() {
						e.animateFinish = !0
					})), t.addClass("opened")
				}
				if(!t.data("load-lazyr")) {
					var s = a.find("img[data-nav-lazyr]");
					s.each(function(e, n) {
						var t = $(n);
						t.attr("src", t.attr("data-nav-lazyr"))
					}), t.data("load-lazyr", !0)
				}
			}), n.on("mouseleave", function() {
				n.find(".opened").removeClass("opened"), n.find(".gco-dropdown-menu.full-screen").stop().css("height", "")
			})
		},
		handleTopPillsHover: function() {
			$(".nav-pills-top .enter-site").hover(function() {
				$(".nav-pills-top").addClass("enter-site-hover")
			}, function() {
				$(".nav-pills-top").removeClass("enter-site-hover")
			})
		},
		handleColumnItemClick: function() {
			$(".column-item > a").click(function() {
				$(".gco-dropdown-menu").css("display", "none"), setTimeout(function() {
					$(".gco-dropdown-menu").css("display", "")
				}, 300)
			})
		}
	};
	e.init()
}(window, jQuery);